    <div class="container" id="add-container">
        <div class="row">
            <div class="col-md-5">
                <h2>Add a Recipe</h2>
                <form action="/post/add" method="POST">
                    <div class="form-group">
                        <label for="title" class="font-weight-bold">Title:</label>
                        <input type="text" class="form-control" id="title">
                        <label for="title" class="font-weight-bold">URL:</label>
                        <input type="text" class="form-control" id="url">
                        <br />
                        <label for="body" class="font-weight-bold">Ingredients:</label>
                        <textarea class="form-control" rows="5" id="ingredients"></textarea>
                        <label for="body" class="font-weight-bold">Instructions:</label>
                        <textarea class="form-control" rows="5" id="instructions"></textarea>
                        <br />
                        <button type="submit" class="btn btn-success submit btn-lg">Submit</button>
                    </div>
                </form>
            </div>

            <div class="col-md-7">
                <h1 class="text-center text-black">Favorites</h1>
                <div class="container" id="favorites-container">
                    <div class="row">
                        <div class="col-12">
                            <div id="articles" style="padding-right:3%; padding-left:3%">
                                {{#each saved}}
                                <button data-id={{this._id}} class="btn btn-warning delete-article"
                                    style="padding: 3px 6px; float:right;">Delete from
                                    Saved</button>
                                <button data-id={{this._id}} class="btn btn-warning note-comment"
                                    style="padding: 3px 6px; float:right; margin-right:.5%">Article Notes</button>
                                <h4><strong>{{this.title}}</strong></h4>
                                <a href="{{this.link}}">{{this.link}}</a>
                                {{#if this.excerpt}}
                                <h5>{{this.excerpt}}</h5>
                                {{/if}}
                                <hr>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

