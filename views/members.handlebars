    <br>
    <div class="row">
        <div class="col-12">
            <h1 class="text-center"><strong>Welcome</strong></h1>
        </div>
    </div>

    <section id="add" class="container">
        <div class="form-wrap">
            <h1>Add A Recipe</h1>
            {{!-- <p>Your contact email will be shared with registered users to apply to your gig</p> --}}
            {{#each errors}}
            <div class="error">
                <p>{{text}}</p>
            </div>
            {{/each}}
            <form action="/members" method="POST">
                <div class="input-group">
                    <label for="name">Title: </label>
                    <input type="text" name="name" id="name" class="input-box"
                        placeholder="recipe title" maxlength="100" value={{name}}>
                </div>
                <div class="input-group">
                    <label for="url">Url:</label>
                    <input type="text" name="url" id="url" class="input-box"
                        placeholder="recipe url" maxlength="100" value={{url}}>
                </div>
               <div class="input-group">
                    <label for="ingredients">ingredients: </label>
                    <textarea name="ingredients" id="ingredients" class="input-box"
                        placeholder="ingredients" rows="10">{{ingredients}}</textarea>
                </div>
                <div class="input-group">
                    <label for="instructions">Instructions: </label>
                    <textarea name="instructions" id="instructions" class="input-box"
                        placeholder="instructions" rows="10">{{instructions}}</textarea>
                </div>
                
                <input type="submit" value="Add Recipe" class="btn btn-reverse">
            </form>
        </div>
    </section>


    <!-- Results Container -->
    <section id="posts" class="container">
        <h1>Your Favorite Recipes</h1>

        {{#each posts}}
        <div class="posts">
            <h3>{{name}}</h3>
            <p>{{url}}</p>
            <p>{{ingredients}}</p>
            <p>{{instructions}}</p>

        </div>
        {{else}}
        <p>You don't have any saved favorites</p>
        {{/each}}

    </section>

</div>

